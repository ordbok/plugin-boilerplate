{
	"private": true,
	"name": "@ordbok/plugin-boilerplate",
	"version": "0.0.0",
	"author": "ORDBOK contributors",
	"license": "MIT",
	"description": "Dictionary plugin boilerplate",
	"keywords": [
		"dictionary",
		"ordbok"
	],
	"bugs": "https://github.com/ordbok/plugin-boilerplate/issues",
	"homepage": "https://github.com/ordbok/plugin-boilerplate#readme",
	"repository": "https://github.com/ordbok/plugin-boilerplate.git",
	"devDependencies": {
		"@ordbok/core": "github:ordbok/core#v0.0.8",
		"@types/node": "^10.0.0",
		"requirejs": "2.3.6",
		"typedoc": "0.14.2",
		"typescript": "3.4.5"
	},
	"engines": {
		"node": ">=10.0.0"
	},
	"peerDependencies": {
		"@ordbok/core": ">=0.0.8"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"main": "dist/lib/index.js",
	"scripts": {
		"build": "npm run clean && npm run build-1 && npm run build-2 && npm run build-3",
		"build-1": "tsc --build tsconfig.json tsconfig-client.json",
		"build-2": "r_js -o rjsconfig-client.js",
		"build-3": "typedoc --gitRevision master --mode file --name \"ORDBOK Plugin Boilerplate\" --out docs --tsconfig tsconfig-client.json",
		"clean": "rm -rf dist",
		"watch": "tsc --build tsconfig.json --watch"
	},
	"types": "dist/lib/index.d.ts"
}
